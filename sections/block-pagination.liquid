<div class="main-parent">
  {% for block in section.blocks %}
    <div class="block-main" style="display: none;">
      <div class="block-title">
        {{ block.settings.title_block }}
      </div>
      <div class="block-desc">
        {{ block.settings.desc_block }}
      </div>
    </div>
  {% endfor %}
</div>

<div class="pagination">
  <!-- Pagination links will be generated by JavaScript -->
</div>

{% schema %}
  {
    "name": "block-pagination",
    "settings": [],
     "blocks": [
    {"type": "text",
     "name": "block-page",
      "settings": [{
          "type": "text",
          "id": "title_block",
          "label": "Title"
        },{
          "type": "text",
          "id": "desc_block",
          "label": "Description"
        }]
    }],
     "presets": [
  {
    "name": "block-pagination","blocks": [
      {
         "type":"text"
      }
    ]
  }
]
  }
{% endschema %}
