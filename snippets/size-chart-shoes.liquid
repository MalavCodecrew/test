<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Country Size Table with Unit Conversion</title>
    <style>
      #size-table table {
         width: 100%;
         border-collapse: collapse;
       }
       #size-table th, td {
         border: 1px solid #000;
         padding: 10px;
         text-align: center;
       }
      #size-table th {
         background-color: #000;
         color: #fff;
       }
       #size-table td {
         background-color: #f3f3f3;
       }
    </style>
  </head>
  <body>
    <label for="country-select">Select Country: </label>
    <select id="country-select" onchange="updateCountryRow()">
      <option value="Russia">Russia</option>
      <option value="India">India</option>
      <option value="US">US</option>
    </select>

    <div>
      <label><input type="radio" name="unit" value="cm" checked onclick="convertSizes('cm')">CM</label>
      <label><input type="radio" name="unit" value="in" onclick="convertSizes('in')">IN</label>
    </div>

    <table id="size-table">
      <thead>
        <tr>
          <th>SIZE</th>
          <th>XXS</th>
          <th>XS</th>
          <th>S</th>
          <th>M</th>
          <th>L</th>
          <th>XL</th>
        </tr>
      </thead>
      <tbody>
        <tr id="country-row">
          <td>RUSSIA</td>
          <td>40</td>
          <td>42</td>
          <td>44</td>
          <td>46</td>
          <td>48</td>
          <td>50</td>
        </tr>
        <tr class="size-row" data-type="waist">
          <td>WAIST CM</td>
          <td>62</td>
          <td>66</td>
          <td>70-72</td>
          <td>74-78</td>
          <td>78-82</td>
          <td>86-90</td>
        </tr>
        <tr class="size-row" data-type="hip">
          <td>HIP CM</td>
          <td>88</td>
          <td>92</td>
          <td>96-98</td>
          <td>100-104</td>
          <td>104-108</td>
          <td>112-116</td>
        </tr>
        <tr class="size-row" data-type="bust">
          <td>BUST CM</td>
          <td>82</td>
          <td>86</td>
          <td>90-92</td>
          <td>94-98</td>
          <td>98-102</td>
          <td>106-110</td>
        </tr>
        <tr class="size-row" data-type="sleeve">
          <td>SLEEVE LENGTH CM</td>
          <td>55</td>
          <td>57</td>
          <td>58</td>
          <td>58</td>
          <td>59</td>
          <td>59</td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
